
@{
    Layout = null;
}

<!DOCTYPE html>
<html lang="es">

<head>
    <meta charset="UTF-8">
    <meta name="viewport" content="width=device-width, initial-scale=1.0">
    <title>Login Simple</title>
    <!-- Enlace a Bootstrap CSS -->
    
    <link rel="stylesheet" href="./css/estilos_Login.css">
</head>

<body>

    <div class="padre">
        <div class="principal">
            <form asp-action="Login" asp-controller="Login" method="post">
                <div id="caja">
                    <h2> LOGIN </h2>
                    <form method="post">
                        <div class="correo">
                            <label for="email">Correo Electronico</label>
                            <input type="text" class="form-control" id="email" name="email" placeholder="Ingresa tu correo">

                        </div>

                        <div class="contraseña">
                            <label for="password">Contraseña</label>
                            <input type="password" class="form-control" id="password" name="password" placeholder="Ingresa tu contraseña">
                        </div>

                        @if (TempData["LoginError"] != null)
                        {
                            <div class="alert alert-danger">@TempData["LoginError"]</div>
                        }

                        <div class="boton"><button type="submit" class="btn btn-primary btn-block">Iniciar Sesión</button></div>
                    </form>
                </div>
            </form>
        </div>
    </div>

    <!-- Enlace a Bootstrap JS y dependencias -->
    <script src="https://code.jquery.com/jquery-3.5.1.slim.min.js"></script>
    @* <script src="https://cdn.jsdelivr.net/npm/@popperjs/core@2.5.3/dist/umd/popper.min.js"></script> *@
    <script src="https://stackpath.bootstrapcdn.com/bootstrap/4.5.2/js/bootstrap.min.js"></script>
</body>
